<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dip"
    android:background="@drawable/common_white_item_click_selector">

    <TextView
        android:id="@+id/main_item_layout_tv_time"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_centerVertical="true"
        android:text="00-11"
        android:textColor="@color/common_blue"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/main_item_layout_tv_name"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="姓名"
        android:textColor="@color/common_text_color"
        android:textSize="20sp"
        android:layout_toRightOf="@id/main_item_layout_tv_time"/>

    <TextView
        android:id="@+id/main_item_layout_tv_prison_area"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="第一监区"
        android:gravity="center"
        android:textColor="@color/common_text_color"
        android:textSize="20sp"
        android:layout_toRightOf="@id/main_item_layout_tv_name"/>
    <TextView
        android:id="@+id/main_item_layout_tv_cancel"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="取消"
        android:gravity="center"
        android:textColor="@color/common_blue"
        android:textSize="20sp"
        android:layout_toRightOf="@id/main_item_layout_tv_name"/>

</LinearLayout>